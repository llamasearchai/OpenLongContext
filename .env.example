# OpenLongContext API Configuration

# Database
DATABASE_URL=sqlite:///./openlongcontext.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/dbname

# Authentication
SECRET_KEY=your-secret-key-here-change-in-production
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_REFRESH_TOKEN_EXPIRE_DAYS=7

# Initial Superuser
SUPERUSER_EMAIL=admin@openlongcontext.ai
SUPERUSER_PASSWORD=changeme123!

# API Keys
AUTH_API_KEY_PREFIX=olc_

# Password Policy
AUTH_MIN_PASSWORD_LENGTH=8
AUTH_REQUIRE_UPPERCASE=true
AUTH_REQUIRE_LOWERCASE=true
AUTH_REQUIRE_DIGITS=true
AUTH_REQUIRE_SPECIAL_CHARS=true

# Rate Limiting
AUTH_RATE_LIMIT_ENABLED=true
AUTH_RATE_LIMIT_DEFAULT=100/minute
AUTH_RATE_LIMIT_AUTH=5/minute
AUTH_RATE_LIMIT_API=1000/hour

# CORS
AUTH_CORS_ENABLED=true
AUTH_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
AUTH_CORS_CREDENTIALS=true

# Security
AUTH_EMAIL_VERIFICATION_REQUIRED=true
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION_MINUTES=30

# Session
AUTH_SESSION_TIMEOUT_MINUTES=60
AUTH_MAX_SESSIONS_PER_USER=5

# Email (for production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=noreply@openlongcontext.ai